{
  "name": "openfm-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "OpenFM â€¢ mood-based music for your stream and desktop, in one click",
  "author": "OpenFM Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openfm/openfm.git"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@openfm/core --filter=@openfm/ui --filter=@openfm/service",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "autopush": "node tools/autopush/auto-push.js",
    "service": "pnpm --filter @openfm/service dev",
    "service:prod": "pnpm --filter @openfm/service start",
    "desktop": "pnpm --filter @openfm/desktop dev",
    "ui": "pnpm --filter @openfm/ui dev",
    "deps:update": "pnpm update -r --latest",
    "deps:audit": "pnpm audit --audit-level moderate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "keywords": [
    "obs",
    "music",
    "streaming",
    "mood",
    "tauri",
    "desktop",
    "audio"
  ]
}
